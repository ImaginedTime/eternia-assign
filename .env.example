# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/orders

# Redis for BullMQ + active orders
REDIS_URL=redis://localhost:6379

# BullMQ
BULL_CONCURRENCY=10

# Execution config
USE_REAL_DEVNET=false
DEVNET_RPC_URL=https://api.devnet.solana.com
WALLET_PRIVATE_KEY=

# DEX configs (only used if USE_REAL_DEVNET=true)
RAYDIUM_SDK_KEY=
METEORA_SDK_KEY=

# App-specific
QUEUE_MAX_CONCURRENT=10
ORDER_PROCESSOR_RATE=100
MAX_RETRIES=3
BACKOFF_BASE_MS=500
LOG_LEVEL=debug

